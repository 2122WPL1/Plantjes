<UserControl x:Class="Plantjes.Views.UserControls.UserControlHabitat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="450">
    <!--UserControl herschreven door MarijnCo met Binding werk van voorgangers, StaticResources staan in App.xaml voor aanpassingen-->
    <Grid>
        <GroupBox
                BorderThickness="0" Width="450" Height="450">
            <Border Style="{StaticResource BorderBox}">
                <StackPanel >
                    <Label Content="COMMENSALISME" Style="{StaticResource LabelBorderTitle}"/>
                    <Grid Height="369">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="105*"/>
                            <ColumnDefinition Width="79*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="188*"/>
                            <RowDefinition Height="181*"/>
                        </Grid.RowDefinitions>
                        <!--Planteigenschappen-->
                        <StackPanel Grid.ColumnSpan="2" Margin="0,0,168,2">
                            <Label Content="Plant eigenschappen" Style="{StaticResource LabelBorder}"/>
                            <CheckBox Content="Onbekend" x:Name="cmbOnbekend"
                                      IsChecked="{Binding Path= SelectedCheckBoxOnbekend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Eetbaar" x:Name="cmbEetbaar" 
                                      IsChecked="{Binding Path=SelectedCheckBoxEetbaar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <CheckBox Content="Kruidbaar" x:Name="cmbKruidbaar" Margin="67,0,0,0"
                                      IsChecked="{Binding Path= SelectedCheckBoxKruidbaar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Bijvriendelijk" x:Name="cmbBijvriendelijk"
                                          IsChecked="{Binding Path=SelectedCheckBoxBijvriendelijk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <CheckBox Content="Geurend" Margin="40,0,0,0" x:Name="cmbGeurend"
                                          IsChecked="{Binding Path=SelectedCheckBoxGeurend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Vlindervriendelijk" x:Name="Vlindervriendelijk" 
                                          IsChecked="{Binding Path=SelectedCheckBoxVlindervriendelijk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <CheckBox Content="Vorstgevoelig" Margin="15,0,0,0" x:Name="Vorstgevoelig" 
                                          IsChecked="{Binding Path=SelectedCheckBoxVorstgevoelig, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!--Socialbiliteit-->
                            <ListBox Height="109" Margin="0,8,0,0">
                                <ListBoxItem Focusable="False">
                                    <Label Content="Sociabiliteit:" Style="{StaticResource LabelBorder}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="Onbekend." VerticalAlignment="Center"
                                              IsChecked="{Binding Path= SelectedCheckBoxSociabiliteitOnbekend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="1 Alleen of in kleine toefen." VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxSociabiliteitI, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="2 In kleine groepen van 3-10 stuks." VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxSociabiliteitII, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="3 Groepen van 10-24 stuks." VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxSociabiliteitIII, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="4 Grotere kolonies in lage beplanting." VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxSociabiliteitIV, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="5 Zeer grote vlakken" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxSociabiliteitV, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                            </ListBox>
                        </StackPanel>
                        <!--Ontwikkelsnelheid Warre-->
                        <StackPanel Grid.Column="1" Margin="0,0,0,2">
                            <ListBox Height="94" >
                                <ListBoxItem Focusable="False">
                                    <Label Content="Ontwikkelsnelheid:" Style="{StaticResource LabelBorder}" Width="152" Margin="-1,0,0,0"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="Onbekend" VerticalAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxOntwikkelsnelheidOnbekend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="Traag" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxOntwikkelsnelheidTraag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="Matig" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxOntwikkelsnelheidMatig, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="Snel" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxOntwikkelsnelheidSnel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                            </ListBox>
                            <!--Strategie Warre-->
                            <ListBox Height="93">
                                <ListBoxItem Focusable="False">
                                    <Label Content="Strategie:" Style="{StaticResource LabelBorder}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="Onbekend" VerticalAlignment="Center"
                                              IsChecked="{Binding Path= SelectedCheckBoxStrategieOnbekend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="C" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxStrategieC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="SC" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxStrategieCR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="S" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxStrategieR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="SR" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxStrategieRS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="R" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxStrategieS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>

                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="CR" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxStrategieSC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>

                                <ListBoxItem Focusable="False">
                                    <CheckBox Margin="30,0,0,0" Content="CSR" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxStrategieCSR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListBoxItem>
                            </ListBox>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <Label Content="Plant Waardes" Style="{StaticResource LabelBorder}"/>
                            <StackPanel>
                                <Label Content="Nectarwaarde:"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Min:"/>
                                    <ComboBox Width="100" x:Name="cmbNectarwaardeMin" 
                                              SelectedItem="{Binding Path=SelectedNectarwaarde}" IsEditable="True">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Max:"/>
                                    <ComboBox Width="100" x:Name="cmbNectarwaardeMax" 
                                              SelectedItem="{Binding Path=SelectedNectarwaarde}" IsEditable="True">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel>
                                <Label Content="Pollenwaarde:"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Min:"/>
                                    <ComboBox Width="100" x:Name="cmbPollenwaardeMin"
                                              SelectedItem="{Binding Path=SelectedPollenwaarde}" IsEditable="True">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Max:"/>
                                    <ComboBox Width="100" x:Name="cmbPollenwaardeMax" 
                                              SelectedItem="{Binding Path=SelectedPollenwaarde}" IsEditable="True">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <!--Levensvorm-->
                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,168,0">
                            <Label Content="Levensvorm" Style="{StaticResource LabelBorder}"/>
                            <Canvas>
                                <ListBox Height="199" HorizontalAlignment="Left" VerticalAlignment="Center" Width="246" >
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Onbekend" VerticalAlignment="Center"
                                                  IsChecked="{Binding Path= SelectedCheckBoxLevensvormOnbekend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Zogenaamde bodembedekker,&#xD;&#xA; weinig verdraagzaam &#xD;&#xA; met andere planten" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Verdraagzame bodembedekker,&#xD;&#xA;ook voor een soortenrijke &#xD;&#xA; aanplant" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Woekerende soort,&#xD;&#xA; worteluitlopers"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Weinig of niet woekerend, &#xD;&#xA;goed te combineren"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Robuuste, meestal grote plant, ook als solitair"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Zich sterk uitzaaiende soort"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Kortlevende plant"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Geeft een goede snijbloem"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm8, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                    <ListBoxItem Focusable="False">
                                        <CheckBox Content="Stelt meer eisen qua &#xD;&#xA;'eten en drinken' of &#xD;&#xA;winterbescherming" VerticalContentAlignment="Center"
                                              IsChecked="{Binding Path=SelectedCheckBoxLevensvorm9, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </ListBoxItem>
                                </ListBox>
                            </Canvas>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </GroupBox>
    </Grid>

</UserControl>