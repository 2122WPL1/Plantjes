<UserControl x:Class="Plantjes.Views.UserControls.Beheer.UserControlUserManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Plantjes.Views.UserControls.Beheer"
             mc:Ignorable="d"
             d:DesignHeight="720"
             d:DesignWidth="1200">
    <!-- Written by Kjell-->
    <Grid>
        <Border Style="{StaticResource BorderBox}" Margin="10,100,739,10" Name="BorderListbox">
            <ListBox
                Visibility="Visible" Background="#99FFFFFF" FontWeight="Bold"
                FontSize="14" Width="450" HorizontalAlignment="Center" Height="610"
                VerticalAlignment="Center" ItemsSource="{Binding users}" SelectedItem="{Binding currentUser}" DisplayMemberPath="DisplayNameWithNr" />
        </Border>
        <Border Style="{StaticResource BorderBox}" Margin="480,100,480,10">
            <Canvas>
                <Grid Height="604" Width="234">
                    <Button Content="Nieuw"
                            Style="{StaticResource ButtonUnified}" Margin="0,160,0,0"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding NewUserCommand}" />
                    <Button Content="Verwijderen"
                            Style="{StaticResource ButtonUnified}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding DeleteCommand}" />
                    <Button Content="CSV Importeren"
                            Style="{StaticResource ButtonUnified}" Command="{Binding ImportCsvCommand}"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,560,0,0" Height="34" />
                </Grid>
            </Canvas>

        </Border>
        <Border Style="{StaticResource BorderBox}" Margin="739,100,10,10">
            <Grid>
                <StackPanel Margin="10,60,225,6">
                    <Label Content="Vives Nr:" Height="40" Style="{StaticResource LabelGegevensGebruiker}" />
                    <Label Content="Voornaam:" Height="40" Style="{StaticResource LabelGegevensGebruiker}" Margin="0,10,0,0" />
                    <Label Content="Achternaam:" Height="40" Style="{StaticResource LabelGegevensGebruiker}" RenderTransformOrigin="0.5,0.5" Margin="0,10,0,0" />
                    <Label Content="E-mailadres:" Height="40" Style="{StaticResource LabelGegevensGebruiker}" RenderTransformOrigin="0.5,0.5" Margin="0,10,0,0" />
                    <Label Content="Wachtwoord:" Height="40" Style="{StaticResource LabelGegevensGebruiker}" RenderTransformOrigin="0.5,0.5" Margin="0,10,0,0" />
                </StackPanel>
                <StackPanel Margin="231,60,4,10" Width="216">
                    <TextBox TextWrapping="Wrap" Text="{Binding currentUser.Vivesnr}" Width="216" Height="40" FontSize="20"
                             HorizontalAlignment="Center" BorderThickness="0" />
                    <TextBox TextWrapping="Wrap" Text="{Binding currentUser.Voornaam}" Width="216" Height="40" FontSize="20"
                             BorderThickness="0" Margin="0,10,0,0" />
                    <TextBox TextWrapping="Wrap" Text="{Binding currentUser.Achternaam}" Width="216" Height="40" FontSize="20"
                             BorderThickness="0" Margin="0,10,0,0" />
                    <TextBox TextWrapping="Wrap" Text="{Binding currentUser.Emailadres}" Width="216" Height="40" FontSize="20"
                             BorderThickness="0" Margin="0,10,0,0" />
                    <TextBox TextWrapping="Wrap" Text="" IsEnabled="false" Width="216" Height="40" FontSize="20"
                             BorderThickness="0" Margin="0,10,0,0" />


                    <Button Content="Opslaan"
                            Style="{StaticResource ButtonUnified}" Command="{Binding SaveUserCommand}" Height="34" Margin="0,10,0,0" />
                </StackPanel>
            </Grid>
        </Border>
        <Label Content="Lijst met gebruikers" FontSize="17" Height="44" Margin="10,0,965,625" VerticalAlignment="Bottom" Style="{StaticResource LabelBorderTitle}" />
        <Label Content="Gegevens van de gebruiker" FontSize="17" Height="44" Margin="890,0,10,625" VerticalAlignment="Bottom" Style="{StaticResource LabelBorderTitle}" />
    </Grid>
</UserControl>